<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF">
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="60dip"
	    android:background="#219621"
	    android:id="@+id/header">
		<ImageView
			android:id="@+id/header_image"
			android:src="@drawable/header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"/>
		<ImageView
			android:id="@+id/loader_image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/header_image"
			android:background="@drawable/loader"
			android:visibility="invisible"/>
	</RelativeLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:weightSum="0.99"
		android:id="@+id/ll_buttons"
		android:layout_alignParentBottom="true">
		<Button
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:id="@+id/bt_country"
				android:text="Country"
				android:layout_marginRight="2dip"
				android:layout_marginTop="2dip"
				android:layout_marginBottom="2dip"
				android:layout_weight="0.33"/>
		<Button
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:id="@+id/bt_state"
				android:text="State"
				android:layout_marginRight="2dip"
				android:layout_marginTop="2dip"
				android:layout_marginBottom="2dip"
				android:layout_weight="0.33"/>
		<Button
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:id="@+id/bt_city"
				android:text="City"
				android:layout_marginRight="2dip"
				android:layout_marginTop="2dip"
				android:layout_marginBottom="2dip"
				android:layout_weight="0.33"/>
	</LinearLayout>
	<ListView
		android:id="@+id/lv_countries"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#FFFFFF"
		android:layout_above="@id/ll_buttons"
		android:layout_below="@id/header"
		android:visibility="gone"
		android:scrollbars="vertical"
    	android:fadingEdge="vertical"
    	android:cacheColorHint="#00000000"
    	android:fastScrollEnabled="true"/>
    <ListView
		android:id="@+id/lv_state"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#FFFFFF"
		android:layout_above="@id/ll_buttons"
		android:layout_below="@id/header"
		android:visibility="gone"
		android:scrollbars="vertical"
    	android:fadingEdge="vertical"
    	android:cacheColorHint="#00000000"
    	android:fastScrollEnabled="true"/>
     <ListView
		android:id="@+id/lv_city"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#FFFFFF"
		android:layout_above="@id/ll_buttons"
		android:layout_below="@id/header"
		android:visibility="gone"
		android:scrollbars="vertical"
    	android:fadingEdge="vertical"
    	android:cacheColorHint="#00000000"
    	android:fastScrollEnabled="true"/>
	<TextView
		android:id="@+id/tv_loading"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:text="Loading ..."
		android:background="#FFFFFF"
		android:textColor="#000000"
		android:layout_above="@id/ll_buttons"
		android:layout_below="@id/header"
		android:gravity="center_vertical|center_horizontal"/>
	
</RelativeLayout>
